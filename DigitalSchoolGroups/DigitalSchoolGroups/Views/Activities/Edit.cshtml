@model DigitalSchoolGroupsPlatform.Models.Activity

@{
    ViewBag.Title = "Edit activity";
}

<h2>@ViewBag.Title </h2>

<form method="post" action="/Activities/Edit/@Model.ActivityId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Label("Title", "Activity title")
    <br />

    @Html.Editor("Title")
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Description", "Activity description")
    <br />
    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Save changes</button>
</form>
