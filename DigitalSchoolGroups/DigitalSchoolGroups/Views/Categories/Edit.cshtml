@model DigitalSchoolGroupsPlatform.Models.Category

<h2>Edit category</h2>

<form method="post" action="/Categories/Edit/@Model.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.CategoryId)

    @Html.Label("CategoryName", "Category name")
    <br />

    @Html.Editor("CategoryName")
    @Html.ValidationMessage("CategoryName", null, new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Save changes</button>
</form>
