<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UniBucAlert</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand font-logo text-white" href="/Groups/Index"><i class="glyphicon glyphicon-education"></i>UniBucAlert</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Show categories", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Add category", "New", "Categories")</li>
                        <li>@Html.ActionLink("Show users", "Index", "Users")</li>
                    }

                    @if (User.IsInRole("Editor") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Show groups", "Index", "Groups")</li>
                        <li>@Html.ActionLink("Add group", "New", "Groups")</li>
                    }

                    @if (User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("Show groups", "Index", "Groups")</li>
                        <li>@Html.ActionLink("Add group", "New", "Groups")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <span class="font-logo">UniBucAlert</span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
