@model DigitalSchoolGroups.Models.ApplicationUser

@{
    ViewBag.Title = "User info details";
}

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

<div class="panel panel-primary">
    <div class="panel-heading">
        <i class="glyphicon glyphicon-user"></i>&nbsp;User's name: @Model.UserName
    </div>

    <div class="panel-body">
        <i class="glyphicon glyphicon-envelope"></i>&nbsp;User's email:
        <span class="label label-default">@Model.Email</span>
        <br />

        <i class="glyphicon glyphicon-th-list"></i>&nbsp;User's role: @ViewBag.roleName
        <br />

        @if (@Model.PhoneNumber != null)
        {
            <br />
            <i class="glyphicon glyphicon-phone"></i>@:&nbsp;User's phone:
            <span class="label label-default">@Model.PhoneNumber</span>
        }
    </div>

    @if ((string)Model.Id != ViewBag.currentUser)
    {
        <div class="panel-footer">
            @using (Html.BeginForm(actionName: "Delete",
                controllerName: "Users",
                routeValues: new { id = @Model.Id }))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button class="btn btn-danger btn-sm" type="submit">Delete user</button>
            }
        </div>
    }
</div>