
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" action="/Categories/Edit/@ViewBag.Category.CategoryId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <label>Category name</label>
    <br />
    <input type="text" name="CategoryName" value="@ViewBag.Category.CategoryName" />
    <br />

    <button class="btn btn-success" type="submit">Save changes</button>
</form>
