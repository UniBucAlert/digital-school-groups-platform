@model DigitalSchoolGroupsPlatform.Models.Group
@*
    @{
        ViewBag.Title = "Edit";
    }
*@
<h2>Edit School Group</h2>

<form method="post" action="/Groups/Edit/@Model.Id">

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @*@Html.Hidden("Id");*@
    @Html.HiddenFor(m => m.Id)

    @Html.Label("Title", "School group title")
    <br />
    @* Se preia valoarea din baza de date si se afiseaza campul completat.*@
    @Html.Editor("Title")
    <br /><br />
    @Html.Label("Description", "School group description")
    <br />
    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
    <br /><br />

    @Html.HiddenFor(m => m.DateCreated)

    <label>Select corresponding category:</label>
    @Html.DropDownListFor(m => m.CategoryId,
    new SelectList(Model.Categ, "Value", "Text"),
    "Select category", new { @class = "form-control" })
    <br />
    <button class="btn btn-sm btn-success" type="submit">Submit group changes</button>
</form>
