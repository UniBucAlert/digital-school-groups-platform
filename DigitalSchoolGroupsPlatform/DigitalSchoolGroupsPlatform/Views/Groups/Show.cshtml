@{
    ViewBag.Title = "Show";
}
<br />
<a href="/Groups/Index">Back to groups main page</a>
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Group.Title</div>
    <div class="panel-body">
        Group Description: <strong>@ViewBag.Group.Description</strong>
        <br />
        <span class="label label-success">since: @ViewBag.Group.DateCreated</span>
        <br />
        <i class="glyphicon glyphicon-globe"></i> @ViewBag.Category.CategoryName
        <br />
        <hr>
        <a class="btn btn-success pull-left" href="/Groups/Edit/@ViewBag.Group.Id">
            Modify school group
        </a>

        <form method="post" action="/Groups/Delete/@ViewBag.Group.Id">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="btn btn-danger pull-right" type="submit">Delete school group</button>
        </form>
    </div>
</div>

<br />
@foreach (var message in ViewBag.Group.Messages)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div>
                    <p>@message.Content</p>
                    <small class="pull-right">@message.Date</small>
                </div>
                <div style="display: inline-block; float : left; margin-right: 15px">
                    <a class="glyphicon glyphicon-pencil" href="/Messages/Edit/@message.MessageId"></a>
                </div>
                <div style="display: inline-block; float : left">
                    <form method="post" action="/Messages/Delete/@message.MessageId">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="glyphicon glyphicon-trash" style="border: none; background: transparent" type="submit"></button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <hr />
}

<div class="container">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <div class="panel">
                <form method="post" action="/Messages/New">
                    <div class="panel-body">
                        <input type="hidden" name="GroupId" value="@ViewBag.Group.Id" />
                        <label>Message content</label>
                        <br />
                        <textarea class="form-control" name="Content"></textarea>
                        <br />
                        <button class="btn btn-success " type="submit">Send message</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
